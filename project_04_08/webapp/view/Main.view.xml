<mvc:View controllerName="project0408.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"    xmlns:t="sap.ui.table"   >
    <Page id="page" title="{i18n>title}">
        <content>

     <t:Table
				rows="{/list}"
				selectionMode="MultiToggle"
				rowActionCount="1"
				paste="onPaste"
				ariaLabelledBy="title"
				id = "idTable">
			<t:rowActionTemplate>
			<t:RowAction>
			<t:items>

			<t:RowActionItem
				type = "Delete" press = "onRowDelete" />


			</t:items>
			</t:RowAction>
			 </t:rowActionTemplate>
			<t:extension>
    <OverflowToolbar>
        <content>
            <Title text="Table" level="H2"/>
            <ToolbarSpacer />
            <Button 
                text="Add" 
                press="onAdd" 
                type="Emphasized"
                icon="sap-icon://add"/>
            <Button 
                text="Delete" 
                press="onDelete" 
                type="Emphasized"
                icon="sap-icon://delete"/>
        	</content>
    	</OverflowToolbar>
	</t:extension>
 <t:columns>
         <t:Column
            hAlign="End">
            <Label width="100%" textAlign="Center" text="Number 1" />
                  <t:template>
                    
					 <Input value = "{name}" />
                  </t:template>
</t:Column>
 <t:Column
            hAlign="End">
            <Label width="100%" textAlign="Center" text="Number 1" />
                  <t:template>
                     <Input value = "{age}" />
                  </t:template>
</t:Column>

</t:columns>


			</t:Table>


        </content>
    </Page>
</mvc:View>
